{
  "title": "Webhook",
  "description": "Send automated messages when events occur in your account",
  "apiVersion": "NA",
  "platform": "webhook",
  "category": "webhook",
  "image": "https://assets.buildable.dev/catalog/node-templates/webhook.svg",
  "tags": ["webhook", "rest"],
  "authentication": [
    {
      "name": "WEBHOOK_URL",
      "label": "Enter your Webhook URL",
      "placeholder": "https://example.com/webhook",
      "rules": {
        "pattern": {
          "value": "^(?:http(s)?:\\/\\/)[\\w.-]+(?:\\.[\\w\\.-]+)+[\\w\\-\\._~:/?#[\\]@!\\$&'\\(\\)\\*\\+,;=.]+$",
          "message": "This field must be a valid URL"
        }
      }
    },
    {
      "name": "WEBHOOK_METHOD",
      "label": "Enter your Webhook Method Type",
      "type": "select",
      "value": "POST",
      "options": [
        {
          "name": "POST",
          "value": "POST"
        },
        {
          "name": "PUT",
          "value": "PUT"
        },
        {
          "name": "PATCH",
          "value": "PATCH"
        },
        {
          "name": "GET",
          "value": "GET"
        },
        {
          "name": "DELETE",
          "value": "DELETE"
        }
      ],
      "hidden": true
    },
    {
      "name": "WEBHOOK_HEADERS",
      "label": "Enter your Webhook Headers",
      "placeholder": "",
      "value": "{\"buildable-connection-platform\":\"webhook\"}",
      "hidden": true,
      "required": false
    }
  ],
  "eventSchema": {},
  "settings": {
    "createBuildableEnvVars": true,
    "hasEvents": false
  },
  "paths": null,
  "events": [],
  "connectionTypes": ["target"],
  "testConnection": false,
  "actions": ["generic"],
  "destinationType": "http",
  "config": {
    "url": "https://us-east4-buildable-production.cloudfunctions.net/webhook-serverless",
    "method": "POST",
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
